extends ../index

block content
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Useless
            span.font-normal Project
        h2.text-center.text-2xl.font-extrabold= heading
        
        .mt-8.mx-auto.max-w-md
            if error_message
                h1.bg-red-500.text-white.uppercase.p-2.font-bold.text-center.mb-2= error_message
            .bg-white.py-8.px-4.shadow

                form.space-y-5(method="POST" action="/users/register")
                    a(class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 cursor-pointer px-3" href="/auth/google") Sing in with google
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="name") Your name
                        input#name.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Your name" type="text" name="name" value=values ? values.name : '')
                        if errors
                            each error in errors
                                if error.path == 'name' 
                                    p.text-red-500.text-sm= error.msg 
                       
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="username") Your username
                        input#username.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Your username" type="text" name="username" value=values ? values.username : '')
                        if errors
                            each error in errors
                                if error.path == 'username' 
                                    p.text-red-500.text-sm= error.msg                        
                       
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Registration e-mail
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Your e-mail" type="email" name="email" value=values ? values.email : '')
                        if errors
                            each error in errors
                                if error.path == 'email' 
                                    p.text-red-500.text-sm= error.msg                  
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Password" type="password" name="password")
                        if errors
                            each error in errors
                                if error.path == 'password' 
                                    p.text-red-500.text-sm= error.msg                       
                              
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repeatPassword") Repeat password
                        input#repeat-password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repeat the password" type="password" name="repeatPassword")
                        if errors
                            each error in errors
                                if error.path == 'repeatPassword' 
                                    p.text-red-500.text-sm= error.msg                       
                    div.flex.items-center.justify-between 
                        a.text-gray-500.text-xs(href="/users/login") Already have an account? 
                            span.text-green-700 Sign in
                        a.text-gray-500.text-xs.underline(href="/users/forgot-password") I forgot my password

                    input(class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Create Account")
