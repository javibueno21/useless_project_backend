extends ../index

block content
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Useless
            span.font-normal Project
        h2.text-center.text-2xl.font-extrabold= heading

        .mt-8.mx-auto.max-w-md
            if error_message
                h1.bg-red-500.text-white.uppercase.p-2.font-bold.text-center.mb-2= error_message
            .bg-white.py-8.px-4.shadow
                    form.space-y-5(method="POST" action=`/users/reset-password/${token}`)
                        div 
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") New password
                            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="new password" type="password" name="password")
                            if errors
                            each error in errors
                                if error.path == 'password' 
                                    p.text-red-500.text-sm= error.msg  
                        div 
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repeatPassword") Repeat password
                            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="repeat password" type="repeatPassword" name="repeatPassword")
                            if errors
                            each error in errors
                                if error.path == 'repeatPassword' 
                                    p.text-red-500.text-sm= error.msg  
                        .flex.items-center.justify-between 
                            a.text-gray-500.text-xs(href="/users/register") Don`t have an account? 
                                span.text-green-700 Sign up
                            a.text-gray-500.text-xs(href="/users/login") Already have an account? 
                                span.text-green-700 Sign in
                        input(class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Send instructions")
                                          
